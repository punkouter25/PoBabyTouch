@page "/"

<PageTitle>PoBabyTouchGc</PageTitle>

<div class="home-container">
    <div class="game-title">
        <h1>PoBabyTouch</h1>
    </div>
    
    <div class="menu-buttons">
        <a href="/game" class="btn btn-primary btn-lg menu-button">Play Game</a>
        <a href="/leader" class="btn btn-secondary btn-lg menu-button">Leaderboard</a>
    </div>
    
    <div class="footer">
        <p>Version 1.0 &copy; 2025</p>
    </div>
</div>

<style>
    .home-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        overflow: hidden;
        position: relative;
    }
    
    .game-title {
        text-align: center;
        margin-top: 10vh;
    }
    
    .game-title h1 {
        font-size: 3.5rem;
        font-weight: bold;
        color: #3a86ff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        animation: pulse 2s infinite;
    }
    
    .menu-buttons {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin: 2rem 0;
    }
    
    .menu-button {
        width: 220px;
        height: 60px;
        border-radius: 30px;
        font-size: 1.5rem;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .menu-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }
    
    .footer {
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: #666;
    }
    
    /* Animated background elements */
    .home-container::before,
    .home-container::after {
        content: "";
        position: absolute;
        width: 300px;
        height: 300px;
        border-radius: 50%;
        opacity: 0.4;
        animation: float 15s infinite ease-in-out;
    }
    
    .home-container::before {
        background-color: rgba(255, 107, 107, 0.4);
        top: -100px;
        left: -100px;
        animation-delay: 0s;
    }
    
    .home-container::after {
        background-color: rgba(58, 134, 255, 0.4);
        bottom: -100px;
        right: -100px;
        animation-delay: -7.5s;
    }
    
    @@keyframes float {
        0%, 100% {
            transform: translate(0, 0);
        }
        25% {
            transform: translate(50px, 50px);
        }
        50% {
            transform: translate(0, 100px);
        }
        75% {
            transform: translate(-50px, 50px);
        }
    }
    
    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .game-title h1 {
            font-size: 2.5rem;
        }
        
        .menu-button {
            width: 180px;
            height: 50px;
            font-size: 1.2rem;
        }
    }
</style>
